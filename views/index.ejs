<div class="home-div">
    <% include ./partials/navbar %>
    <div id="carousel-example-generic" class="carousel slide" data-ride="carousel">

        <!-- Wrapper for slides -->
        <div class="carousel-inner">
          <div class="item active carousel_item3">
            <div class="carousel-caption">
               <h1 class="text-center index_primary_text">Rent-a-Friend</h1>
               <h2 class="text-center">Get a Friend to accompany you to that special event/occassion</h2>
               <br/>
               <a href="/friends" class="hire_button">Get Started</a>
            </div>
          </div>
          <div class="item carousel_item1">
            <div class="carousel-caption">
                <h2 class="white_text text-center index_primary_text">Trust, Comfort, Safety in your home</h2>
                <h4 class="yellow_text text-center index_secondary_text">Maids, Drivers and Aunties</h4>
                <a href="/employees/1/type/Friend" class="hire_button">Hire Today</a>
            </div>
          </div>
          <div class="item carousel_item2">
            <div class="carousel-caption">
              ...
            </div>
          </div>
        </div>

        <!-- Controls -->
        <a class="left carousel-control" href="#carousel-example-generic" data-slide="prev">
          <span class="glyphicon glyphicon-chevron-left"></span>
        </a>
        <a class="right carousel-control" href="#carousel-example-generic" data-slide="next">
          <span class="glyphicon glyphicon-chevron-right"></span>
        </a>

    </div>
</div>

<div class="home-div-two">
  <div class="container">
      <div class="row">
        <div class="home-div-two-value-div">
              <img class="sharelock_logo_lg img-responsive" alt="Brand" src="images/logo_large.png"><h2 class="sharelock_logo_text_lg white_text">"We are about making the home a better place for you and your family"</h2>
        </div>
      </div>
  </div>
</div>
<div class="home-div-three"><!--featured employees-->
  <div class="container">
      <h2 class="text-center">Featured Employees</h2>
      <br/>
      <br/>
      <div class="row">
        <% for (var i = 0; i < featured.length; i++) { %>
            <div class="col-md-4">
                <div class="thumbnail">
                    <img src="<%= featured[i].photo_url %>">
                    <div class="caption">
                        <h3><%= featured[i].firstname %> <%= featured[i].lastname %></h3>
                        <p><%= featured[i].type %></p>
                        <p>
                          <% for (var j = 0; j < 5; j++) { %>
                              <% if ((j+1) > featured[i].average_rating) { %>
                                  <span class="fa fa-star"></span>
                              <% } else { %>
                                  <span class="fa fa-star checked"></span>
                              <% } %>
                          <% } %>
                        </p>
                    </div>
                </div>
            </div>
        <% } %>
      </div>
      <br/>
      <a href="/employees/1/type/Friend" class="hire_button shadow" role="button">More?</a>
  </div>
</div>

